<!doctype html>
<html lang="en">
  <head>
    <title>func_kenobi's website</title>
    <meta name="description" content="The website of func_kenobi.">
    <%- include('partials/header') %>
    <script src="https://code.jquery.com/jquery-3.1.1.min.js"></script>
    <script>
    function minecraftButton() {
    jQuery.ajax({
        url: `/api/button`, // Endpoint URL
        method: 'GET', // Or 'POST' if you used app.post() on the server
        success: function(response) {
            console.log('Server function executed:', response);
            let element = document.getElementById('output');
            element.innerHTML = response;
            // Handle the response from the server
        },
        error: function(err) {
            console.error('Error calling server function:', err);
        }
    });
    }
    
    </script>
  </head>
  
  <body style="flex-direction: column; height: 100%;">
    <%- include('partials/navbar') %>
    <div class="row" style="width: 100%; height: 100%;">
      <div class="col-2 p-3"></div>
      <div class="col-8 p-3" style="display: flex; flex: 1; flex-direction: column;">
        <p class="bg-danger text" style="text-align: center;">Work in progress!</p>
        <button class="button" onclick="minecraftButton()">DO NOT PRESS!</button>
        <p class="text bg-info" id="output"></p>
        <%- include('partials/footer') %>
      </div>
      <div class="col-2 p-3"></div>
    </div>

   


    

    <!-- Bootstrap core JavaScript
    ================================================== -->
    <!-- Placed at the end of the document so the pages load faster -->
    <script src="/js/vendor/popper.min.js"></script>
